{
  "name": "design-simplified-be",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "prepare": "husky",
    "test": "jest",
    "dev": "nodemon",
    "build": "npx tsc",
    "lint": "eslint --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "up": "sudo docker-compose up -d",
    "start:dev": "cross-env NODE_ENV=development ts-node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production ts-node dist/index.js",
    "deploy:dev": "pm2 startOrRestart ecosystem.config.js --env development --update-env",
    "deploy:prod": "pm2 startOrRestart ecosystem.config.js --env production --update-env"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "author": "Design Simplified BE Team",
  "license": "ISC",
  "description": "",
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "type": "module",
  "module": "esnext",
  "dependencies": {
